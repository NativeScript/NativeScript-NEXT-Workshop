<Page loaded="load">
	<TabView>
		<TabView.items>
			<TabEntry title="Templates">
				<TabEntry.view>
					<GridLayout rows="auto, *">
						<!-- TODO: Move this to the NavBar -->
						<Button row="0" text="Create a MEME" tap="create" />

						<ListView items="{{ templates }}" row="1">
							<ListView.itemTemplate>
								<StackLayout>
									<Image source="{{ source }}" />
								</StackLayout>
							</ListView.itemTemplate>
						</ListView>
					</GridLayout>
				</TabEntry.view>
			</TabEntry>
			<TabEntry title="Recent">
				<TabEntry.view>
					<StackLayout>
						<Label text="TODO: Implement" />
					</StackLayout>
				</TabEntry.view>
			</TabEntry>
		</TabView.items>
	</TabView>
</Page>