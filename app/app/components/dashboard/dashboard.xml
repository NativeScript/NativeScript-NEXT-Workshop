<Page 
	loaded="load"
	cssClass="page">

	<GridLayout rows="25, *" cssClass="mainContainer">
		
		<DockLayout row="0" stretchLastChild="true"  cssClass="dockHead">
			<Label dock="left" text="Create Meme!" />
   			<Button dock="right" text="+" tap="create" />
		</DockLayout>	

		<TabView row="1">
			<TabView.items>
				
				<TabEntry title="Templates">
					<TabEntry.view>
						<ScrollView>
							<WrapLayout id="memeContainer" itemHeight="100" horizontalAlignment="center">
							</WrapLayout>
						</ScrollView>
					</TabEntry.view>
				</TabEntry>

				<TabEntry title="Recent">
					<TabEntry.view>
						<StackLayout>
							<Label text="TODO: Implement" />
						</StackLayout>
					</TabEntry.view>
				</TabEntry>
				
			</TabView.items>
		</TabView>

	</GridLayout>
</Page>