<Page 
	cssClass="page"
	loaded="load">

	<GridLayout rows="auto, *" cssClass="mainContainer">

		<DockLayout row="0" stretchLastChild="true" cssClass="dockHead" tap="createNewTemplate">
			<Label dock="left" text="Create New Template" />
			<Image dock="right" url="~/app/images/icons/addBtn.png" cssClass="addNewMeme" />
		</DockLayout>

		<TabView row="1">
			<TabView.items>
				
				<TabEntry title="Templates">
					<TabEntry.view>
						<ScrollView>
							<WrapLayout id="memeContainer" itemHeight="100" horizontalAlignment="center">
							</WrapLayout>
						</ScrollView>
					</TabEntry.view>
				</TabEntry>

				<TabEntry title="My Memes">
					<TabEntry.view>
						<ScrollView>
							<WrapLayout id="recentMemeContainer" itemHeight="100" horizontalAlignment="center">
							</WrapLayout>
						</ScrollView>
					</TabEntry.view>
				</TabEntry>

			</TabView.items>
		</TabView>

	</GridLayout>
</Page>