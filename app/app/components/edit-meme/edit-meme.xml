<Page loaded="loaded" navigatedTo="navigatedTo">
	<ScrollView>
		<StackLayout>
			<Image source="{{ imageSource }}" />
			<TextField hint="Top text" text="{{ topText }}" />
			<TextField hint="Bottom text" text="{{ bottomText }}" />

			<Label text="Text Size" cssClass="textSizeLabel" />
			<Slider value="{{ fontSize }}" minValue="10" maxValue="100" />

			<DockLayout>
				<Label dock="left" cssClass="settingsDockLabel" text="Black Text" />
				<Switch dock="right" cssClass="settingsDockSwitch" checked="{{ isBlackText }}" />
			</DockLayout>

			<!-- TODO: Move to nav bar -->
			<Button text="Save" tap="save" />
			<Button text="Share" tap="share" />
		</StackLayout>
	</ScrollView>
</Page>