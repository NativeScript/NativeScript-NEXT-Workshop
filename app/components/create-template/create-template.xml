<Page
	xmlns="http://www.nativescript.org/tns.xsd"
	navigatedTo="navigatedTo"
	loaded="loaded">

	<Page.optionsMenu>
		<MenuItem id="navNewTemplate" text="New" tap="newTemplate" android.position="actionBar"/>
		<!-- <MenuItem id="navNewTemplate" icon="~/images/icons/addBtn.png" text="New" tap="newTemplate" android.position="actionBar"/> -->
	</Page.optionsMenu>

	<StackLayout>
		<Image imageSource="{{ imageSource }}" />

		<ActivityIndicator busy="{{ isBusy }}" width="50" height="50"/>

		<Button text="Import Picture" tap="saveLocally" />
		<Button text="Submit For Approval" tap="submitToEverlive" />
	</StackLayout>

</Page>
