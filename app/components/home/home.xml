<Page xmlns="http://www.nativescript.org/tns.xsd"
	cssClass="page"
	loaded="load"
	navigatedTo="navigatedTo">

	<GridLayout rows="auto, *" cssClass="mainContainer">

		<DockLayout row="0" stretchLastChild="true" cssClass="dockHead" tap="createNewTemplate">
			<Label dock="left" text="Create New Template" />
			<Image dock="right" url="~/app/images/icons/addBtn.png" cssClass="addNewMeme" />
		</DockLayout>

		<TabView row="1">
			<TabView.items>

				<TabViewItem title="Templates">
					<TabViewItem.view>
						<ScrollView>
							<WrapLayout id="templateContainer" itemHeight="100" horizontalAlignment="center">
							</WrapLayout>
						</ScrollView>
					</TabViewItem.view>
				</TabViewItem>

				<TabViewItem title="My Memes">
					<TabViewItem.view>
						<ScrollView>
							<WrapLayout id="myMemeContainer" itemHeight="100" horizontalAlignment="center">
							</WrapLayout>
						</ScrollView>
					</TabViewItem.view>
				</TabViewItem>

			</TabView.items>
		</TabView>

	</GridLayout>
</Page>